                        <Image Source="/Images/Tartaglia.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddTighnari" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddTighnariCommand}" Visibility="{Binding StandardCharacterVisibility}">
                        <Image Source="/Images/Tighnari.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddVenti" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddVentiCommand}">
                        <Image Source="/Images/Venti.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddWanderer" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddWandererCommand}">
