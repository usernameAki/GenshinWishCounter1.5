                        <Image Source="/Images/Itto.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddJean" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddJeanCommand}" Visibility="{Binding StandardCharacterVisibility}">
                        <Image Source="/Images/Jean.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddKazuha" Style="{StaticResource CharacterButtonStyle}" 
