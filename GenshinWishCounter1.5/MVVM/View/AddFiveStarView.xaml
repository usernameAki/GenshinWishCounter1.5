<UserControl x:Class="GenshinWishCounter1._5.MVVM.View.AddFiveStarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenshinWishCounter1._5.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.Row="1" CornerRadius="10 10 0 0" Width="270">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.75"/>
            </Border.Background>
            <Label Content="Choose character:"  HorizontalAlignment="Center"
               VerticalAlignment="Center" FontWeight="Bold" FontSize="30"/>
        </Border>
        
        
        <!--Character Buttons-->
        <Border Grid.Column="1" Grid.Row="2" CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.75"/>
            </Border.Background>
            <ScrollViewer Padding="0 10 0 10">
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    
                    <Button x:Name="AddAlbedo" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddAlbedoCommand}">
                        <Image Source="/Images/Albedo.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddAlhaitham" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddAlhaithamCommand}">
                        <Image Source="/Images/Alhaitham.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddAloy" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddAloyCommand}">
                        <Image Source="/Images/Aloy.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddAyaka" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddAyakaCommand}">
                        <Image Source="/Images/Ayaka.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddAyato" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddAyatoCommand}">
                        <Image Source="/Images/Ayato.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddBaizhu" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddBaizhuCommand}">
                        <Image Source="/Images/Baizhu.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddCyno" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddCynoCommand}">
                        <Image Source="/Images/Cyno.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddDehya" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddDehyaCommand}" Visibility="{Binding StandardCharacterVisibility}">
                        <Image Source="/Images/Dehya.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddDiluc" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddDilucCommand}" Visibility="{Binding StandardCharacterVisibility}">
                        <Image Source="/Images/Diluc.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddEula" Style="{StaticResource CharacterButtonStyle}" 
                            Command="{Binding AddEulaCommand}">
                        <Image Source="/Images/Eula.png" Style="{StaticResource CharacterImageStyle}"/>
                    </Button>
                    
                    <Button x:Name="AddGanyu" Style="{StaticResource CharacterButtonStyle}" 
